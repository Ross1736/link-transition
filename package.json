    "slide",
    "zoom",
    "animation",
    "react-router",
    "react-router-dom",
    "router",
    "navigation",
    "transition",
    "animations",
    "typescript"
  ],
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ross1736/link-transition.git"
  },
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "exports": {
